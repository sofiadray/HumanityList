<div class = "container">
	<% @states.each do |state| %>
	
	<div class= "col-md-2">
	
	<hr>
		<h5><%= state.name %></h5>
		<% cities = state.cities%>
		<% cities.each do |c|%>
		<h6><%= link_to "\t #{c.name}", city_path(c.id) %> <%= c.charities.count > 0 ? "(#{c.charities.count})" : () %> </h6>
		<% end %>
	</div>
	<% end %>
</div>
