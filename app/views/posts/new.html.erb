<div class="container">
  <div class = "col-md-12">
  <center>
  <h2> Post a new volunteer opportunity for <%= @charity.name%> </h2>
    <%= simple_form_for @post do |form| %>
      <%= form.input :title %>
      <%= form.input :content %>
      <%= form.hidden_field :charity_id, value: @charity.id %>
      <%= form.submit "Create post", class: 'btn btn-default' %>
    <% end %> 
      </center>
  </div>


</div>